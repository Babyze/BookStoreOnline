<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Book Store</title>
    <link rel="stylesheet" href="~/Content/admin.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/lib")
    <link href="https://fonts.googleapis.com/css?family=Montserrat:200,300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.20/r-2.2.3/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.20/r-2.2.3/datatables.min.js"></script>
</head>
<body>
    @Html.Partial("_Header")
    <section class="recomended-sec">
        <div class="container">
            <div class="row text-left">
                <div class="col-md-3">
                    <div class="list-group">
                        <a id="admin" href="#" class="list-group-item list-group-item-action disabled">
                            <h3>Admin Panel</h3>
                        </a>
                        <a id="dashboard" href="/admin/dashboard" class="list-group-item list-group-item-action">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                        <a id="genres" href="/admin/genres" class="list-group-item list-group-item-action">
                            <i class="far fa-bookmark"></i> Genres
                        </a>
                        <a id="books" href="/admin/books" class="list-group-item list-group-item-action">
                            <i class="fas fa-book"></i>  Books
                        </a>
                        <a id="users" href="/admin/users" class="list-group-item list-group-item-action">
                            <i class="far fa-address-book"></i> Users
                        </a>
                    </div>
                </div>
                <div class="col-md">
                    @RenderBody()
                </div>
            </div>
        </div>
    </section>
    @Html.Partial("_Footer")
    @RenderSection("scripts", required: false)
</body>
</html>
