<div class="border-bottom genre-panel">
    <h1>Add New Genre</h1>
</div>
    <div class="row add">
        <form class="col" id="genre-add" action="" onsubmit="AddGenre()">
            <div class="form-group">
                <input type="text" class="form-control" id="genre-name" placeholder="Enter Genre Name" required>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-primary">Add New</button>
                <a href="/admin/genres" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
    <div class="modal fade" id="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Successfully</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Add new genre successfully.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        function AddGenre() {
            $.ajax({
                url: '/api/genres/',
                method: 'POST',
                conentType: 'application/x-www-form-urlencoded',
                headers: {
                    Authorization: window.localStorage.getItem("token")
                },
                data: {
                    GenreName: $("#genre-name").val().trim()
                }
            }).done(function () {
                $("#modal").modal('show');
                $('#modal').on('hidden.bs.modal', function () {
                    window.location.href = "/admin/genres";
                });
            });
        }
        $("#genre-add").submit(function () { return false;})
        $("#genres").addClass("active");

    </script>
